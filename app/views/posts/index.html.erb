<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Posting</th>
      <th>User</th>
      <th>Listing</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Item</th>
      <th>Date posted</th>
      <th>Availability</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.posting_id %></td>
        <td><%= post.user_id %></td>
        <td><%= post.listing_id %></td>
        <td><%= post.price %></td>
        <td><%= post.quantity %></td>
        <td><%= post.item %></td>
        <td><%= post.date_posted %></td>
        <td><%= post.availability %></td>
        <td><%= post.views %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
